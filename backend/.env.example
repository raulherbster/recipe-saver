# Recipe Saver API Configuration

# Database (SQLite for development, PostgreSQL for production)
DATABASE_URL=sqlite+aiosqlite:///./recipes.db
# DATABASE_URL=postgresql+asyncpg://user:password@localhost/recipes

# OpenAI API Key (required for LLM-based extraction)
OPENAI_API_KEY=sk-your-api-key-here

# OpenAI Model (gpt-4o-mini is cost-effective, gpt-4o for better quality)
OPENAI_MODEL=gpt-4o-mini

# Extraction settings
EXTRACTION_TIMEOUT=60
MAX_TRANSCRIPT_LENGTH=15000

# CORS origins (comma-separated)
CORS_ORIGINS=["*"]
